<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:fadingEdge="none"
	    android:scrollbarStyle="outsideInset">
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
    		
   			<TextView
		      	android:text="Name:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
   			<TextView
		      	android:id="@+id/activation_name"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:paddingLeft="5px"
		        android:paddingBottom="10px"
		  	/>
   			<TextView
		      	android:text="Version:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
   			<TextView
		      	android:id="@+id/activation_version"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:paddingLeft="5px"
		        android:paddingBottom="10px"
		  	/>
   			<TextView
		      	android:text="URL:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
   			<TextView
		      	android:id="@+id/activation_url"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:paddingLeft="5px"
		        android:paddingBottom="10px"
		  	/>
   			<TextView
		      	android:text="Period:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
   			<TextView
		      	android:id="@+id/activation_period"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:paddingLeft="5px"
		        android:paddingBottom="10px"
		  	/>
   			<TextView
		      	android:text="Maximum Duration for a Run:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
   			<TextView
		      	android:id="@+id/activation_duration"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:paddingLeft="5px"
		        android:paddingBottom="10px"
		  	/>
		        
	        <TextView
		      	android:text="Requested Services:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
		  	<LinearLayout
		  		android:id="@+id/activation_services"
	    		android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingBottom="10px">
		    
		    </LinearLayout>
		        
		    <TextView
		  		android:text="Requested Dangerous Permissions"
		  		android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		    />
		    
		   	<LinearLayout
		  		android:id="@+id/activation_permissions"
	    		android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingBottom="10px"
		    />
		        
		    <TextView
		      	android:text="Description:"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:background="#FF909090"
		        android:paddingLeft="5px"
		  	/>
		  	<TextView
		      	android:id="@+id/activation_description"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="?android:attr/textColorPrimary"
		        android:paddingLeft="5px"
		        android:paddingBottom="10px"
		  	/>
    	</LinearLayout>
    </ScrollView>
</LinearLayout>